---
import { Icon } from "astro-icon";
import logoImage from "./logo.png";
---

<main aria-labelledby="header" class="relative overflow-hidden">
  <h2 class="sr-only" id="header">Header</h2>
  <div class="relative mx-auto px-8 max-w-7xl p-24 lg:px-36 md:px-12">
    <div class="mx-auto text-center">
      <div class="flex justify-center">
        <img
          src={logoImage.src}
          alt="Quickstore Logo"
          class="logo animate-spin-slow max-w-xs"
        />
      </div>
      <h1
        class="text-cokiey-500 mt-20 font-bold md:text-6xl text-3xl tracking-tight"
      >
        Tiệm đồ tên bánh
      </h1>
      <div class="flex justify-center flex-col gap-3 mt-6 sm:flex-row">
        <a
          class="items-center h-12 justify-center rounded-full duration-200 focus:outline-none inline-flex px-6 py-3 text-center w-full border-2 hover:bg-tomato-700 border-cokiey-500 bg-tomato-500 focus-visible:outline-negroni-500 focus-visible:ring-negroni-500 font-medium hover:border-cokiey-500 hover:text-cokiey-500 lg:w-auto text-cokiey-500"
          href="https://instagram.com/cokie.typo"
          target="_blank"
          ><Icon pack="mdi" name="instagram" class="w-5 mr-2" />Instagram</a
        >
        <a
          class="items-center h-12 justify-center rounded-full duration-200 focus:outline-none inline-flex px-6 py-3 text-center w-full border-2 hover:bg-negroni-900 border-negroni-500 bg-negroni-800 focus-visible:outline-negroni-500 focus-visible:ring-negroni-500 font-medium hover:border-negroni-500 hover:text-negroni-500 lg:w-auto text-cokiey-500"
          href="https://www.tiktok.com/@cokie.typo"
          target="_blank"
          ><Icon pack="ic" name="baseline-tiktok" class="w-5 mr-2" />TikTok</a
        >
      </div>
      <h1
        class="text-cokiey-500 mt-14 font-bold md:text-6xl text-3xl tracking-tight"
      >
        Liên hệ
      </h1>
      <div class="flex justify-center flex-col gap-3 mt-6 sm:flex-row">
        <a
          class="items-center h-12 justify-center rounded-full duration-200 focus:outline-none inline-flex px-6 py-3 text-center w-full border-2 hover:bg-negroni-900 border-negroni-500 bg-negroni-500 focus-visible:outline-negroni-500 focus-visible:ring-negroni-500 font-medium hover:border-negroni-500 hover:text-negroni-500 lg:w-auto text-charcoal-500"
          href="mailto:cokie.typo@gmail.com"
          ><Icon pack="ic" name="outline-email" class="w-5 mr-2" />Gmail</a
        >
      </div>
    </div>
  </div>
</main>
